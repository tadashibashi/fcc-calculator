// ===== Mixins ==========
border-radius(n)
    -webkit-border-radius n
    -moz-border-radius n
    -ms-border-radius n
    border-radius n

user-select(n)
    -webkit-user-select n
    -moz-user-select n
    -ms-user-select n
    user-select n

// ===== 
html {
    background-color: gray
}

$text-color = rgb(204, 204, 204)

$grid-color-op = #d57c23
$grid-color-num = gray;
$grid-color-aux = rgb(79, 79, 79);
$display-color = rgb(56, 56, 56);

// ===== Title ============
h1
    font-size 2rem
    text-align: center
    user-select(none)

#author
    font-size 1rem
    text-align: center
    user-select(none)

#author p
    margin: 0.25rem
    font-family: "Tahoma"

#author p:nth-of-type(1)
    color: $grid-color-aux

#author p:nth-of-type(2)
    color: black

// ===== Calculator Box ===
#calculator-border
    width: 100%;
    max-width: 400px;
    background-color: $display-color
    margin: 25% auto 2rem auto

    display: grid;
    grid-template-rows: 2fr 1fr 1fr 1fr 1fr 1fr
    grid-template-columns: 1fr 1fr 1fr 1fr
    overflow: hidden

    border: 1px solid rgba(185, 185, 185, 0.542)
    border-radius: 3%
    box-shadow: 0 0 8px 1px rgba(0, 0, 0, 0.6)

#display-wrapper
    height: 100%
    background: $display-color
    padding: 0 1rem
    display: flex
    align-items: bottom

#display
    width: 100%
    margin: auto
    font-size: 2rem
    color: white
    text-align: right
    overflow-wrap: break-word



// ===== Buttons ==========
.btn-square
    border: 1px rgba(0, 0, 0, 0.454) solid
    padding: 10px
    font-size: 1rem
    font-weight: bold
    text-align: center

    color: $text-color
    background-color: gray

    user-select(none)

.btn-square:active, .btn-square.active-state
    background-color: rgb(218, 218, 218) !important

// Specific Grid Positions
#display-wrapper
    grid-row: 1
    grid-column: 1 / -1

.btn-square:nth-of-type(1) // clear
    background-color: $grid-color-aux
    grid-row: 2
    grid-column: 1 / 3

.btn-square:nth-of-type(2) // div
    background-color: $grid-color-op
    grid-row: 2
    grid-column: 3

.btn-square:nth-of-type(3) // mult
    background-color: $grid-color-op
    grid-row: 2
    grid-column: 4

.btn-square:nth-of-type(4) // 7
    grid-row: 3
    grid-column: 1

.btn-square:nth-of-type(5) // 8
    grid-row: 3
    grid-column: 2

.btn-square:nth-of-type(6) // 9
    grid-row: 3
    grid-column: 3

.btn-square:nth-of-type(7) // -
    background-color: $grid-color-op
    grid-row: 3
    grid-column: 4

.btn-square:nth-of-type(8) // 4
    grid-row: 4
    grid-column: 1

.btn-square:nth-of-type(9) // 5
    grid-row: 4
    grid-column: 2

.btn-square:nth-of-type(10) // 6
    grid-row: 4
    grid-column: 3

.btn-square:nth-of-type(11) // +
    background-color: $grid-color-op
    grid-row: 4
    grid-column: 4

.btn-square:nth-of-type(12) // 1
    grid-row: 5
    grid-column: 1

.btn-square:nth-of-type(13) // 2
    grid-row: 5
    grid-column: 2

.btn-square:nth-of-type(14) // 3
    grid-row: 5
    grid-column: 3

.btn-square:nth-of-type(15) // =
    background-color: $grid-color-op
    grid-row: 5 / 7
    grid-column: 4

.btn-square:nth-of-type(16) // 0
    grid-row: 6
    grid-column: 1 / 3

.btn-square:nth-of-type(17) // .
    grid-row: 6
    grid-column: 3
